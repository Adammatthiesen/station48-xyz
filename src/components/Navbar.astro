---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
import { getServerIcon } from "astro-mcserverstatus:components/api";
import station48 from "../assets/station48.svg";

const serverIcon = await getServerIcon();

---

<header class="bg-block-dirt decoration-[.25em]">
  <div class="bg-block-grass_side bg-block-grass_block_side bg-repeat-x">
    <div
      class="flex flex-col md:flex-row items-center justify-end h-block-3 md:h-block-2 w-full pb-4 md:pb-0 md:pr-4 bg-gradient-to-t from-black/75 to-black/25"
    >
      <a href="/" class="mx-auto md:ml-0">
        <Image src={station48} alt="" class="w-block-2 inline" width={64} height={64}/>
        <Image src={logo} alt="logo" class="w-block-8 inline" />
      </a>
      <nav class="flex items-center justify-end w-full md:w-min gap-3 px-4 md:px-0 text-2xl">
        <slot />
        <a href="/" class="minecraft-button py-2 px-3 text-lg">Home</a>
        <a href="/get-started" class="minecraft-button py-2 px-3 text-lg">Get Started</a>
        <a
          href="https://map.station48.xyz/"
          class="minecraft-button py-2 px-3 text-lg"
          target="_blank">Interactive Live Map</a
        >
      </nav>
    </div>
  </div>
</header>