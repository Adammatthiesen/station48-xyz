---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

import "../styles/reset.css";
import "../styles/minecraft.css";
import { getServerIcon } from "astro-mcserverstatus:components/api";

type Props = {
	navbar?: boolean;
	footer?: boolean;
};

const { navbar = true, footer = true } = Astro.props;

const favicon = await getServerIcon();

// const {} = config;
---

<html>
  <head>
    <meta charset="utf-8" />
    <title>Station 48 | A Minecraft Server for Developers and Friends!</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="A Minecraft Server for Developers and Friends!" />
    <link rel="icon" href={favicon} />
  </head>
  <body class="dark flex flex-col min-h-screen p-0 m-0 bg-block-stone bg-light-level-4 scrollbar font-minecraft">
    {navbar && <Navbar />}
    <div class="grow mx-auto p-4 minecraft prose">
      <slot />
    </div>
    {footer && <Footer />}
  </body>
</html>